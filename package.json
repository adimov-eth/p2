    "blessed-contrib": "^4.11.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "eciesjs": "^0.4.7",
    "ethers": "^6.13.1",
    "inquirer": "^10.0.4",
    "jest": "^29.7.0",
    "js-sha3": "^0.9.3",
