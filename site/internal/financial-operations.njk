  },
  {
    "title": "Activate membership",
    "description": "Move the CRM account to \"Active\" which triggers the welcome email sequence for designated executives and guests.",
    "system": "CRM + Email"
  }
] %}

{% set settlementSteps = [
  {
    "title": "Log all rounds",
