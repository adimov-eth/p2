{% macro accordion(items) %}
<div class="accordion">
  {% for item in items %}
  <details class="accordion-item"{% if item.open %} open{% endif %}>
    <summary class="accordion-trigger">{{ item.title }}</summary>
    <div class="accordion-content">
      {{ item.content | safe }}
    </div>
  </details>
  {% endfor %}
</div>
{% endmacro %}
