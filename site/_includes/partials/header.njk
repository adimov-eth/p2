<header class="container header-nav">
  <div>
    <a href="/" class="badge" aria-label="Prime Corporate Golf Club home">
      {{ site.brand.name }}
    </a>
  </div>
  {% set navItems = site.navigation.primary or [] %}
  <nav class="nav-links" aria-label="Primary">
    {% set current = page.url or '' %}
    {% for item in navItems %}
      {% set isActive = current == item.url %}
      <a href="{{ item.url }}" class="nav-link{% if isActive %} is-active{% endif %}">{{ item.label }}</a>
    {% endfor %}
  </nav>
  <div>
    <a class="button-primary" href="mailto:{{ site.contact.concierge }}">
      Concierge
    </a>
  </div>
</header>
