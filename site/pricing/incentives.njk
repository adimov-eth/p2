<section class="container mt-10">
  <h2 class="text-3xl font-semibold mb-6">Founding membership tiers</h2>
  <div class="tier-grid">
    {% for tier in tiers %}
    <article class="tier-card {% if tier.featured %}tier-card--featured{% endif %}">
      <header class="tier-card__header">
        <p class="tier-card__audience">{{ tier.audience }}</p>
        <h3>{{ tier.name }}</h3>
        <p class="tier-card__price">{{ tier.price | formatCurrencyTHB }} <span>/ year + VAT</span></p>
        {% if tier.savings %}
        <p class="tier-card__meta">{{ tier.savings }}</p>
        {% endif %}
      </header>
      <ul class="tier-card__list">
        {% for benefit in tier.benefits %}
        <li>{{ benefit }}</li>
        {% endfor %}
      </ul>
      <div class="tier-card__cta">
        <a href="{{ tier.cta.href }}" class="{% if tier.featured %}button-primary{% else %}badge{% endif %}">{{ tier.cta.label }}</a>
      </div>
    </article>
    {% endfor %}
  </div>
</section>

<section class="container mt-12">
  <div class="card">
    <h2 class="text-2xl font-semibold mb-4">Launch incentive guardrails</h2>
